<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button222" parent="android:Widget.Button">
        <item name="android:background">@color/colorButton</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/buttonPaddingBottom</item>
        <item name="android:paddingTop">@dimen/buttonPaddingBottom</item>
        <item name="android:layout_marginTop">@dimen/buttonMargin</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

</resources>
